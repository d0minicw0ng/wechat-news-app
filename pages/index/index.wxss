.categories {
  position: fixed;
  width: 100%;
  height: 60rpx;
  top: 0;
  display: flex;
  flex-direction: row;
  align-content: center;
  background-color: #35A0E4;
  padding: 15rpx 20rpx;
  z-index: 999;
}

.category {
  color: #BEDEF3;
  margin-right: 32rpx;
}

.category.active {
  color: white;
}

.hottest-news {
  margin-top: 90rpx;
  width: 100%;
  position: relative;
}

.hottest-news-tag {
  position: absolute;
  top: 0;
  right: 0;
  background-color: #C54D3B;
  opacity: 0.8;
  color: white;
  padding: 10rpx;
  border-bottom-left-radius: 10rpx;  
}

.hottest-news-image {
  height: 400rpx;
  width: 100%;
}

.hottest-news-title {
  font-weight: 700;
  color: #EEEAE1;
  position: absolute;
  bottom: 50rpx;
  padding: 30rpx;
}

.hottest-news-metadata {
  color: #EEEAE1;
  position: absolute;
  bottom: 10rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  font-weight: 200;
  font-size: 30rpx;
}

.news-list {
  width: 100%;
}

.news-container {
  height: 300rpx;
  border-bottom: 1rpx solid gray;
  display: flex;
}

.news-left {
  padding: 30rpx;
}

.news-right {
  padding: 30rpx;
}

.news-title {
  font-weight: 700;
}

.news-metadata {
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  font-weight: 200;
  font-size: 30rpx;
}

.news-source {
  margin-right: 20rpx;
}

.news-image {
  height: 200rpx;
  width: 225rpx;
}